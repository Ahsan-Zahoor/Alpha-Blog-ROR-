  <h1 class="text-center mt-4">Listing All Articles</h1>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row  mt-4 justify-content-md-center">
        <div class="col-8">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              <% if article.user %>
                <%= link_to article.user.username,user_path(article.user) %>
              <% end %>
              </div>
                <div class="card-body">
                    <h5 class="card-title text-success"><%= link_to article.title,article_path(article),class:"text-success" %></h5>
                    <p class="card-text"><%= truncate(article.description,length:100) %></p>
                    <%= link_to 'View',article_path(article),class:"btn btn-outline-success"%>
                    <% if logged_in? && ((article.user== current_user) || current_user.admin?) %>
                    <%= link_to 'Edit',edit_article_path(article),class:"btn btn-outline-success"%>
                    <%= button_to 'Delete',article_path(article),class:"btn btn-outline-success",method: :delete,data:{ confirm: "Are you sure?"}%>
                    <% end %>
                </div>
              <div class="card-footer text-muted">
                <small>Created <%= article.created_at %> ago,
                edited <%= article.updated_at %> ago</small>
              </div> 
        </div>
      </div>
      </div>
    <% end %>
  </div>
